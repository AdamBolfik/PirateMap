<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_aasuactionbar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Aasuactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Aasuactionbar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Aasuactionbar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Aasuactionbar</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Aasuactionbar</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_aasuactionbar</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_aasuactionbar</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Aasuactionbar</item>
    </style>

    <style name="ActionBar.Solid.Aasuactionbar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_aasuactionbar</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_aasuactionbar</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_aasuactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Aasuactionbar</item>
    </style>

    <style name="ActionBar.Transparent.Aasuactionbar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_aasuactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Aasuactionbar</item>
    </style>

    <style name="PopupMenu.Aasuactionbar" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_aasuactionbar</item>	
    </style>

    <style name="DropDownListView.Aasuactionbar" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_aasuactionbar</item>
    </style>

    <style name="ActionBarTabStyle.Aasuactionbar" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_aasuactionbar</item>
    </style>

    <style name="DropDownNav.Aasuactionbar" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_aasuactionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_aasuactionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_aasuactionbar</item>
    </style>
    
    <style name="ProgressBar.Aasuactionbar" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_aasuactionbar</item>
    </style>
    
    <style name="ActionButton.CloseMode.Aasuactionbar" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_aasuactionbar</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Aasuactionbar.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Aasuactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Aasuactionbar</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>
