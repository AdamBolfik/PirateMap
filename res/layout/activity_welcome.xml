<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tunabytes.piratemap.WelcomeActivity" >

    <TextView
        android:id="@+id/welcome_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/welcome_header"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/campus_visitor_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:onClick="visitorLogin"
        android:text="@string/campus_visitor" />

    <Button
        android:id="@+id/prospective_student_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/campus_visitor_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="prospectiveStudentLogin"
        android:text="@string/prospective_student" />

    <Button
        android:id="@+id/current_student_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prospective_student_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="currentStudentLogin"
        android:text="@string/current_student" />

</RelativeLayout>
